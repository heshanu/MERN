<html>
  <head>
    <title>Movies</title>
    <link rel="stylesheet" href="/stylesheets/design.css" />
    
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
      integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <h1 id="searchTitle">Search Results > <span><%= searchQuery.toUpperCase() %></span></h1>
 
   <% data["results"].forEach((movie)=>{ %>
    <div class="card w-75 mb-5">
      <div class="row no-gutters">
        <div class="col-md-4">
          <img src="https://image.tmdb.org/t/p/w600_and_h900_bestv2/<%= movie['poster_path'] %>" alt="" class="img-fluid card-img" />
        </div>
 
        <div class="col-md-8">
          <div class="card-body">
            <h2 class="card-title"><%= movie["original_title"] %></h2>
            <hr />
            <p class="card-text"><%= movie["overview"] %></p>
            <hr />
 
            <p class="card-text">Date Published: <b><%= movie["release_date"] %></b></p>
            <p class="card-text">Total Votes: <b><%= movie["vote_count"] %></b></p>
            <p class="card-text">Rating: <b><%= movie["vote_average"] %>/b></p>
          </div>
        </div>
      </div>
    </div>
   <% }) %>
  </body>
</html>